<!DOCTYPE html>
<html lang="{{ site.language or 'en' }}" dir="{{ site.direction or 'ltr' }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  {% include "components/seo.njk" %}

  <!-- Preload critical fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Lora:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  
  <!-- Main CSS -->
  <link rel="stylesheet" href="/assets/css/main.css">
  
  <!-- Theme detection script (inline for performance) -->
  <script>
    // Set theme before content loads to prevent flash
    (function() {
      const theme = localStorage.getItem('theme') || 
                   (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
    })();
  </script>
</head>
<body>
  <!-- Skip link for accessibility -->
  <a href="#main-content" class="skip-link">Skip to main content</a>
  
  <!-- Main content -->
  <main id="main-content">
    {{ content | safe }}
  </main>
  
  <!-- Temporary navigation (will be replaced in Phase A4) -->
  <nav style="margin-top: 2rem; padding-top: 1rem; border-top: 1px solid var(--color-border-light);">
    <div class="container">
      <a href="/">Home</a> | 
      <a href="/blog/">Blog</a>
    </div>
  </nav>
</body>
</html>